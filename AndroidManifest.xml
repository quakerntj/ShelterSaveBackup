<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ntj.sheltersavebackup"
	android:versionCode="2"
	android:versionName="2.0" >

	<uses-sdk
		android:minSdkVersion="17"
		android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme" >
		<activity
			android:name=".ShelterBackupActivity"
			android:screenOrientation="nosensor"
			android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	   	<activity
			android:name=".DwellerEditorActivity"
			android:screenOrientation="nosensor"
			android:label="special" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		<activity
			android:name=".DwellerListActivity"
			android:screenOrientation="nosensor"
			android:label="Dwellers" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		<activity
			android:name=".DatabaseMakerActivity"
			android:screenOrientation="nosensor"
			android:label="Database" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		<activity
			android:name=".ItemChooserActivity"
			android:screenOrientation="nosensor"
			android:label="Choose" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
	</application>
</manifest>
